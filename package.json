{
  "name": "nodejs-development-environment",
  "version": "1.0.0",
  "description": "Cory House pluralsight course - Building a JavaScript Development Environment",
  "main": "index.js",
  "scripts": {
    "prestart": "babel-node build/log-start.js",
    "start": "npm-run-all --parallel start:server lint:watch test:watch start-mockapi",
    "start:server": "babel-node build/dev-server-express.js",
    "stop": "echo \"Running stop script\"",
    "lint": "esw webpack.config.* build src test",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --reporter progress build/test-setup.js \"src/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "generate-mock-data": "babel-node build/generateMockData",
    "prestart-mockapi": "npm run generate-mock-data",
    "start-mockapi": "json-server --watch src/api/db.json --port 3001",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test lint",
    "build": "babel-node build/build.js",
    "postbuild": "babel-node build/dist-server-express.js"
  },
  "keywords": [
    "npm",
    "scripting"
  ],
  "author": "Jhai Sarmiento",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chalk": "^2.3.1",
    "compression": "^1.7.2",
    "css-loader": "^0.28.10",
    "eslint": "^4.18.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-watch": "^3.1.3",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "faker": "^4.1.0",
    "html-webpack-plugin": "^2.30.1",
    "jsdom": "^11.6.2",
    "json-schema-faker": "^0.5.0-rc13",
    "json-server": "^0.12.1",
    "koa": "^2.5.0",
    "mocha": "^5.0.1",
    "npm-run-all": "^4.1.2",
    "numeral": "^2.0.6",
    "open": "0.0.5",
    "rimraf": "^2.6.2",
    "style-loader": "^0.20.2",
    "supertest": "^3.0.0",
    "surge": "^0.19.0",
    "webpack": "^3.11.0",
    "webpack-dev-middleware": "^2.0.6",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-md5-hash": "0.0.6"
  },
  "dependencies": {
    "raven-js": "^3.22.3",
    "whatwg-fetch": "^2.0.3"
  }
}
